<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sAgregarCarrito</servlet-name>
        <servlet-class>Servelets.sAgregarCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sCerrarSesion</servlet-name>
        <servlet-class>Servelets.sCerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sGuardarPedido</servlet-name>
        <servlet-class>Servelets.sGuardarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sQuitarItemCarrito</servlet-name>
        <servlet-class>Servelets.sQuitarItemCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sVerificarAcceso</servlet-name>
        <servlet-class>Servelets.sVerificarAcceso</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sAgregarCarrito</servlet-name>
        <url-pattern>/sAgregarCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sCerrarSesion</servlet-name>
        <url-pattern>/sCerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sGuardarPedido</servlet-name>
        <url-pattern>/sGuardarPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sQuitarItemCarrito</servlet-name>
        <url-pattern>/sQuitarItemCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sVerificarAcceso</servlet-name>
        <url-pattern>/sVerificarAcceso</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
